          badge: "html",
          note: "Stack avatars",
        },

        // Text animations
        {
          name: "text-flip",
          category: "text",
          size: 0.4,
          badge: "js",
          note: "Needs JS for rotation",
        },
        {
          name: "text-morph",
          category: "text",
          size: 0.3,
          badge: "js",
          note: "Needs JS for rotation",
        },
        { name: "slide-digit", category: "text", size: 0.2 },
      ];

      let selectedAnimation = "fade-in";
      let currentTrigger = "load";

      // Render animation list
      function renderList() {
        const list = document.getElementById("animation-list");
        const categories = {};

        animations.forEach((a) => {
          if (!categories[a.category]) categories[a.category] = [];
          categories[a.category].push(a);
        });

        const badgeColors = {
          hover: "bg-blue-900/50 text-blue-400",
          js: "bg-amber-900/50 text-amber-400",
          html: "bg-purple-900/50 text-purple-400",
        };

        const badgeLabels = {
          hover: "hover",
          js: "JS",
          html: "HTML",
        };

        list.innerHTML = Object.entries(categories)
          .map(
            ([cat, items]) => `
          <div class="mb-3">
            <div class="text-[10px] text-zinc-600 uppercase tracking-wider mb-1 px-2">${cat}</div>
            ${items
              .map(
                (a) => `
              <div class="animation-item flex items-center gap-2 px-2 py-1.5 rounded cursor-pointer ${
                selectedAnimation === a.name ? "selected" : ""
              }" data-name="${a.name}" onclick="selectAnimation('${a.name}')" ${
                  a.note ? `title="${a.note}"` : ""
                }>
                <div class="w-3 h-3 rounded-full border flex-shrink-0 ${
                  selectedAnimation === a.name
                    ? "bg-white border-white"
                    : "border-zinc-600"
                }">
                  ${
                    selectedAnimation === a.name
                      ? '<div class="w-1.5 h-1.5 rounded-full bg-zinc-950 m-[2px]"></div>'
                      : ""
                  }
              </div>
                <span class="text-xs flex-1 truncate ${
                  selectedAnimation === a.name ? "text-white" : "text-zinc-400"
                }">tm-${a.name}</span>
                ${
                  a.badge
                    ? `<span class="text-[9px] px-1 py-0.5 rounded ${
                        badgeColors[a.badge]
                      }">${badgeLabels[a.badge]}</span>`
                    : ""
                }
            </div>
            `
              )
              .join("")}
            </div>
        `
          )
          .join("");

        updateOutput();
      }

      function selectAnimation(name) {
        selectedAnimation = name;
        renderList();
        updatePreview();
      }

      function updateOutput() {
        const anim = animations.find((a) => a.name === selectedAnimation);
        const size = anim ? anim.size : 0.2;
        document.getElementById("selected-count").textContent = `1 selected`;
        document.getElementById("bundle-size").textContent = `~${size.toFixed(
          1
        )}KB for selected`;

        let className = `tm-${selectedAnimation}`;
        let code = "";

        // Handle different animation types
        if (anim?.badge === "hover") {
          // Hover animations - already have hover built-in
          code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage (hover effect built-in) -->
<button class="${className}">
                Hover me
</button>`;
        } else if (anim?.badge === "js") {
          // JS required animations
          const variant = selectedAnimation === "text-flip" ? "flip" : "morph";
          code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- JS Import -->
import { initTextFlipElement } from 'tailmotion/utils';

<!-- Usage -->
<span>We create </span>
<span id="my-text" class="${className}"></span>
<span> apps</span>

<!-- JavaScript -->
initTextFlipElement(
  document.getElementById('my-text'),
  {
    words: ['beautiful', 'amazing', 'powerful'],
    variant: '${variant}',  // 'flip' | 'morph' | 'slide'
    interval: 2500
  }
);`;
        } else if (anim?.badge === "html") {
          // HTML structure required
          if (selectedAnimation === "count-reveal") {
            code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage - wrap each digit/char in span -->
<div class="${className}">
  <span>1</span>
  <span>2</span>
  <span>,</span>
  <span>3</span>
  <span>4</span>
  <span>5</span>
            </div>
            
<!-- Or generate dynamically -->
<script>
const num = 12345;
const html = num.toLocaleString()
  .split('')
  .map(c => \`<span>\${c}</span>\`)
  .join('');
</script>`;
          } else if (selectedAnimation === "stagger") {
            code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage - children auto-stagger -->
<ul class="${className}">
  <li>Item 1</li>  <!-- delay: 0ms -->
  <li>Item 2</li>  <!-- delay: 80ms -->
  <li>Item 3</li>  <!-- delay: 160ms -->
</ul>`;
          } else if (selectedAnimation === "avatar-group") {
            code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage -->
<div class="${className}">
  <div class="tm-avatar tm-avatar-ring">
    <span class="tm-avatar-tooltip">Alice</span>
    A
              </div>
  <div class="tm-avatar tm-avatar-ring">
    <span class="tm-avatar-tooltip">Bob</span>
    B
            </div>
  <div class="tm-avatar tm-avatar-ring">
    <span class="tm-avatar-tooltip">Carol</span>
    C
            </div>
  <div class="tm-avatar">+5</div>
</div>`;
          } else {
            code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage (needs HTML structure) -->
<div class="${className}">
  <!-- See docs for structure -->
</div>`;
          }
        } else if (selectedAnimation === "slide-digit") {
          // slide-digit is in text category but no badge
          code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage - each digit slides up -->
<div class="flex items-center">
  <span class="tm-slide-digit tm-delay-0">4</span>
  <span class="tm-slide-digit tm-delay-75">2</span>
              </div>
            
<!-- With staggered delays -->
<div class="flex">
  <span class="tm-slide-digit" style="--tm-delay: 0ms">1</span>
  <span class="tm-slide-digit" style="--tm-delay: 100ms">2</span>
  <span class="tm-slide-digit" style="--tm-delay: 200ms">3</span>
</div>`;
        } else {
          // Standard animations
          if (currentTrigger === "hover")
            className = `hover:tm-${selectedAnimation}`;
          if (currentTrigger === "click")
            className = `active:tm-${selectedAnimation}`;

          code = `<!-- CSS Import -->
@import 'tailmotion/css';

<!-- Usage -->
<div class="${className}">
  Content
</div>`;
        }

        document.getElementById("code-output").textContent = code;
      }

      function updatePreview() {
        const container = document.getElementById("preview-area");
        const anim = animations.find((a) => a.name === selectedAnimation);

        // Special previews for container/text/hover animations
        if (
          anim?.badge === "html" ||
          anim?.badge === "js" ||
          anim?.badge === "hover" ||
          anim?.category === "text"
        ) {
          container.innerHTML = getSpecialPreview(selectedAnimation);
          return;
        }

        // Standard preview
        container.innerHTML = `
          <div id="preview-element" class="h-16 w-16 rounded-xl bg-white flex items-center justify-center">
            <i data-lucide="sparkles" class="w-6 h-6 text-zinc-950"></i>
            </div>
        `;
        lucide.createIcons();

        const el = document.getElementById("preview-element");

        // Clear handlers
        el.onmouseenter = null;
        el.onmouseleave = null;
        el.onclick = null;

        // Add selected class based on trigger
        if (currentTrigger === "load") {
          el.classList.add(`tm-${selectedAnimation}`);
        } else if (currentTrigger === "hover") {
          el.onmouseenter = () => el.classList.add(`tm-${selectedAnimation}`);
          el.onmouseleave = () =>
            el.classList.remove(`tm-${selectedAnimation}`);
        } else if (currentTrigger === "click") {
          el.onclick = () => {
            el.classList.remove(`tm-${selectedAnimation}`);
            void el.offsetWidth;
            el.classList.add(`tm-${selectedAnimation}`);
          };
        }
      }

      function getSpecialPreview(name) {
        const anim = animations.find((a) => a.name === name);

        // Interactive hover animations
        if (anim?.badge === "hover") {
          return getHoverPreview(name);
        }

        const previews = {
          stagger: `
