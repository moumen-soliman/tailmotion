              </div>
          `,
          "text-flip": `
            <div class="text-center">
              <span class="text-zinc-500 text-lg">Build </span>
              <span id="text-flip-preview" class="tm-text-flip text-lg font-semibold text-white"></span>
              <span class="text-zinc-500 text-lg"> apps</span>
            </div>
          `,
          "text-morph": `
            <div class="text-center">
              <span class="text-zinc-500 text-lg">We are </span>
              <span id="text-morph-preview" class="tm-text-morph text-lg font-semibold text-emerald-400"></span>
              </div>
          `,
          "slide-digit": `
            <div class="flex items-center gap-1 rounded-xl bg-zinc-800 border border-zinc-700 px-5 py-3">
              <span class="tm-slide-digit text-2xl font-bold text-white font-mono tm-delay-0">4</span>
              <span class="tm-slide-digit text-2xl font-bold text-white font-mono tm-delay-75">2</span>
            </div>
          `,
        };

        // Initialize text animations after render
        setTimeout(() => {
          if (name === "text-flip") {
            const el = document.getElementById("text-flip-preview");
            if (el && typeof TailMotion !== "undefined") {
              TailMotion.initTextFlipElement(el, {
                words: ["beautiful", "amazing", "powerful"],
                variant: "flip",
                interval: 2000,
              });
            }
          } else if (name === "text-morph") {
            const el = document.getElementById("text-morph-preview");
            if (el && typeof TailMotion !== "undefined") {
              TailMotion.initTextFlipElement(el, {
                words: ["developers", "designers", "creators"],
                variant: "morph",
                interval: 2500,
              });
            }
          }
        }, 100);

        return (
          previews[name] ||
          `
          <div class="text-zinc-500 text-sm text-center">
            <div class="mb-2">Special animation</div>
            <div class="text-xs text-zinc-600">See code for usage</div>
              </div>
        `
        );
      }

      function getHoverPreview(name) {
        const hoverPreviews = {
          "liquid-btn": `
            <div class="flex flex-col gap-3">
              <button class="tm-liquid-btn rounded-lg border border-zinc-600 px-6 py-2.5 text-zinc-300 text-sm hover:text-black" style="--tm-liquid-color: white;">
                Hover me (bottom)
              </button>
              <button class="tm-liquid-btn tm-liquid-btn-left rounded-lg border border-zinc-600 px-6 py-2.5 text-zinc-300 text-sm hover:text-black" style="--tm-liquid-color: white;">
                Hover me (left)
              </button>
            </div>
          `,
          "liquid-wave": `
            <button class="tm-liquid-wave rounded-lg border border-zinc-600 px-6 py-2.5 text-zinc-300 text-sm hover:text-black" style="--tm-liquid-color: white;">
              Hover for wave
            </button>
          `,
          "liquid-underline": `
            <button class="tm-liquid-underline rounded-lg border border-zinc-600 px-6 py-2.5 text-zinc-300 text-sm hover:text-black" style="--tm-liquid-color: white;">
              Hover for underline fill
            </button>
          `,
          "shimmer-hover": `
            <div class="flex flex-col gap-3">
              <button class="tm-shimmer-hover rounded-lg bg-white px-6 py-2.5 text-zinc-950 text-sm font-medium">
                Hover for shimmer
              </button>
              <div class="tm-shimmer-hover rounded-lg bg-zinc-800 border border-zinc-700 p-4 cursor-pointer">
                <div class="text-white text-sm font-medium">Premium Card</div>
                <div class="text-zinc-500 text-xs">Hover for shine</div>
            </div>
              </div>
          `,
          "lift-hover": `
            <div class="tm-lift-hover cursor-pointer rounded-lg bg-zinc-800 border border-zinc-700 p-4 w-40" style="--tm-lift-shadow-to: 0 20px 40px rgba(255,255,255,0.05);">
              <div class="text-white text-sm font-medium">Hover Card</div>
              <div class="text-zinc-500 text-xs">Lifts up on hover</div>
            </div>
          `,
          "rotate-hover": `
            <div class="tm-rotate-hover cursor-pointer rounded-lg bg-zinc-800 border border-zinc-700 p-4 w-40">
              <div class="text-white text-sm font-medium">Tilt Card</div>
              <div class="text-zinc-500 text-xs">Rotates on hover</div>
              </div>
          `,
          "flip-hover": `
            <div class="tm-flip-hover cursor-pointer rounded-xl bg-white h-16 w-16 flex items-center justify-center">
              <span class="text-zinc-950 text-xl font-bold">TM</span>
            </div>
          `,
        };

        return (
          hoverPreviews[name] ||
          `
          <button class="tm-${name} rounded-lg border border-zinc-600 px-6 py-2.5 text-zinc-300 text-sm" style="--tm-liquid-color: white;">
            Hover to see effect
          </button>
        `
        );
      }

      function replayPreview() {
        const anim = animations.find((a) => a.name === selectedAnimation);

        // For special animations, just re-render the preview
        if (
          anim?.badge === "html" ||
          anim?.badge === "js" ||
          anim?.category === "text"
        ) {
          updatePreview();
          return;
        }

        // Standard replay
        const el = document.getElementById("preview-element");
        if (el) {
          el.classList.remove(`tm-${selectedAnimation}`);
          void el.offsetWidth;
          el.classList.add(`tm-${selectedAnimation}`);
        }
      }

      function setTrigger(trigger) {
        currentTrigger = trigger;
        document.querySelectorAll(".trigger-btn").forEach((btn) => {
          if (btn.dataset.trigger === trigger) {
            btn.classList.remove("bg-zinc-900", "text-zinc-500");
            btn.classList.add("bg-zinc-800", "text-white");
          } else {
            btn.classList.remove("bg-zinc-800", "text-white");
            btn.classList.add("bg-zinc-900", "text-zinc-500");
          }
        });
        updateOutput();
        updatePreview();
      }

      function copyInstall() {
        navigator.clipboard.writeText("npm install tailmotion");
      }

      function copyCode() {
        const code = document.getElementById("code-output").textContent;
        navigator.clipboard.writeText(code);
      }

      // Counter helpers
      function replayCount() {
        const container = document.getElementById("star-count");
        const target = 12345;
        const formatted = target.toLocaleString();

        // Recreate spans with animation
        container.innerHTML = `<span class="tm-count-reveal">${formatted
          .split("")
          .map((char) => `<span>${char}</span>`)
          .join("")}</span>`;
      }

      function startCountUp() {
        const container = document.getElementById("star-count");
        const target = 12345;
        const duration = 2000;
        const start = performance.now();

        // Start from 0
        container.innerHTML = '<span class="font-mono">0</span>';

        function update(now) {
          const elapsed = now - start;
          const progress = Math.min(elapsed / duration, 1);
          // Ease out cubic
          const eased = 1 - Math.pow(1 - progress, 3);
          const count = Math.round(eased * target);

          const formatted = count.toLocaleString();
          container.innerHTML = `<span class="font-mono">${formatted}</span>`;

          if (progress < 1) {
            requestAnimationFrame(update);
          } else {
            // Final state with animation
            container.innerHTML = `<span class="tm-count-reveal">${formatted
              .split("")
              .map((char) => `<span>${char}</span>`)
              .join("")}</span>`;
          }
        }

        requestAnimationFrame(update);
      }

      // Format number with commas
      function formatNumber(num) {
        return num.toLocaleString();
      }

      // Handle URL query param for deep linking
      let hasInitialTarget = false;
      
      function initFromURL() {
        const params = new URLSearchParams(window.location.search);
        const target = params.get("target");
        
        if (target) {
          hasInitialTarget = true;
          // Support both "tm-fade-in" and "fade-in" formats
          const name = target.replace(/^tm-/, "");
          const anim = animations.find((a) => a.name === name);
          
          if (anim) {
            selectedAnimation = name;
            // Scroll to playground after a short delay
            setTimeout(() => {
              document.querySelector("#animation-list")?.scrollIntoView({ 
                behavior: "smooth", 
                block: "center" 
              });
            }, 100);
          }
        }
      }

      // Update URL when animation changes (without reload)
      function updateURL(name) {
        const url = new URL(window.location);
        url.searchParams.set("target", `tm-${name}`);
        window.history.replaceState({}, "", url);
      }

      // Override selectAnimation to also update URL
      selectAnimation = function(name) {
        // Only update URL after user interaction, not on initial load
        updateURL(name);
        selectedAnimation = name;
        renderList();
        updatePreview();
      };

      // Init - run when ready
      function init() {
        try {
          lucide.createIcons();
        } catch(e) {
          console.warn('Lucide icons not loaded yet');
        }
        initFromURL();
        renderList();
        updatePreview();
        
        // If no initial target, clear any stale URL params
        if (!hasInitialTarget && window.location.search) {
          window.history.replaceState({}, "", window.location.pathname);
        }
      }
      
      // Run init
      init();
    </script>
  </body>
</html>
